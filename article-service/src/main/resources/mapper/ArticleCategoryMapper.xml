<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linshiyi.article.mapper.ArticleCategoryMapper">


    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article_category (name, parent_id, level, sort)
        VALUES (#{dto.name}, #{dto.parentId}, #{dto.level}, #{dto.sort})
    </insert>
    <update id="update">
        UPDATE article_category
        <set>
            <if test="name != null">
                name = #{dto.name},
            </if>
            <if test="parentId != null">
                parent_id = #{dto.parentId},
            </if>
            <if test="level != null">
                level = #{dto.level},
            </if>
            <if test="sort != null">
                sort = #{dto.sort},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{dto.isDeleted},
            </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>
