<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linshiyi.article.mapper.ArticleContentMapper">


    <insert id="insert">
        INSERT INTO article_content (article_id, content,content_version)
        VALUES (#{articleId}, #{content}, #{contentVersion})
    </insert>

    <select id="selectLatestByArticleId" resultType="com.linshiyi.article.domain.po.ArticleContent">
        SELECT id, article_id, content, content_version FROM article_content WHERE article_id = #{articleId} ORDER BY content_version DESC LIMIT 1
    </select>
</mapper>
